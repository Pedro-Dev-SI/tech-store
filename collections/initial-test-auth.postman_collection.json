{
  "info": {
    "name": "Initial Test Auth",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "description": "Fluxo inicial via API Gateway: register -> login -> public/protected"
  },
  "variable": [
    {"key": "gatewayUrl", "value": "http://localhost:8080"},
    {"key": "accessToken", "value": ""},
    {"key": "refreshToken", "value": ""}
  ],
  "item": [
    {
      "name": "Auth Register",
      "request": {
        "method": "POST",
        "header": [{"key": "Content-Type", "value": "application/json"}],
        "url": "{{gatewayUrl}}/api/v1/auth/register",
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"pedro@teste.com\",\n  \"cpf\": \"14317084619\",\n  \"phone\": \"11999999999\",\n  \"name\": \"Pedro\",\n  \"password\": \"SenhaForte1\"\n}"
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "var json = pm.response.json();",
              "if (json && json.accessToken) {",
              "  pm.environment.set('accessToken', json.accessToken);",
              "}",
              "if (json && json.refreshToken) {",
              "  pm.environment.set('refreshToken', json.refreshToken);",
              "}"
            ]
          }
        }
      ]
    },
    {
      "name": "Auth Login",
      "request": {
        "method": "POST",
        "header": [{"key": "Content-Type", "value": "application/json"}],
        "url": "{{gatewayUrl}}/api/v1/auth/login",
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"pedro@teste.com\",\n  \"password\": \"SenhaForte1\"\n}"
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "var json = pm.response.json();",
              "if (json && json.accessToken) {",
              "  pm.environment.set('accessToken', json.accessToken);",
              "}",
              "if (json && json.refreshToken) {",
              "  pm.environment.set('refreshToken', json.refreshToken);",
              "}"
            ]
          }
        }
      ]
    },
    {
      "name": "Public Products (GET)",
      "request": {
        "method": "GET",
        "url": "{{gatewayUrl}}/api/v1/products"
      }
    },
    {
      "name": "Protected Products (POST) - No Token",
      "request": {
        "method": "POST",
        "header": [{"key": "Content-Type", "value": "application/json"}],
        "url": "{{gatewayUrl}}/api/v1/products",
        "body": {
          "mode": "raw",
          "raw": "{\n  \"sku\": \"TEST-001\",\n  \"name\": \"Produto Teste\",\n  \"brand\": \"Marca\",\n  \"categoryId\": \"00000000-0000-0000-0000-000000000000\",\n  \"price\": 10.0\n}"
        }
      }
    },
    {
      "name": "Protected Products (POST) - With Token",
      "request": {
        "method": "POST",
        "header": [
          {"key": "Content-Type", "value": "application/json"},
          {"key": "Authorization", "value": "Bearer {{accessToken}}"}
        ],
        "url": "{{gatewayUrl}}/api/v1/products",
        "body": {
          "mode": "raw",
          "raw": "{\n  \"sku\": \"TEST-002\",\n  \"name\": \"Produto Teste 2\",\n  \"brand\": \"Marca\",\n  \"categoryId\": \"00000000-0000-0000-0000-000000000000\",\n  \"price\": 10.0\n}"
        }
      }
    }
  ]
}
